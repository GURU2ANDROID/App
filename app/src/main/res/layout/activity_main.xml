<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/swu_spaces"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#00ffffff"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swu_schoolbus"
        app:layout_constraintTop_toBottomOf="@id/swu_store"
        app:srcCompat="@drawable/logo_spaces" />

    <ImageButton
        android:id="@+id/swu_cafeteria"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="150dp"
        android:background="#00ffffff"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/swu_schoolbus"
        app:layout_constraintEnd_toStartOf="@+id/swu_store"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_cafeteria" />

    <ImageButton
        android:id="@+id/swu_schoolbus"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#00ffffff"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/swu_spaces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swu_cafeteria"
        app:srcCompat="@drawable/logo_schoolbus" />

    <ImageButton
        android:id="@+id/swu_store"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="150dp"
        android:background="#00ffffff"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/swu_spaces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/swu_cafeteria"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_store" />

    <ImageView
        android:id="@+id/titleLogo"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_logo" />

    <TextView
        android:id="@+id/textView_cafeteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24surround"
        android:text="학식메뉴"
        android:textColor="@color/main_red"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/swu_schoolbus"
        app:layout_constraintEnd_toStartOf="@+id/swu_store"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swu_cafeteria"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24surround"
        android:text="교내상점"
        android:textColor="@color/main_red"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/swu_spaces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/swu_cafeteria"
        app:layout_constraintTop_toBottomOf="@+id/swu_store"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24surround"
        android:text="셔틀버스"
        android:textColor="@color/main_red"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/swu_spaces"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swu_schoolbus"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24surround"
        android:text="학교공간"
        android:textColor="@color/main_red"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/swu_schoolbus"
        app:layout_constraintTop_toBottomOf="@+id/swu_spaces"
        app:layout_constraintVertical_bias="0.2"
        tools:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>