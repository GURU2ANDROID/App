<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LibraryCafeActivity">

    <!-- 중앙도서관 학교공간 정보 -->
    <TextView
        android:id="@+id/lib_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#792222"
        android:fontFamily="@font/scdream7"
        android:text="중앙도서관"
        android:textSize="38sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lib_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:gravity="center"
            android:fontFamily="@font/cafe24surround"
            android:text="2F"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lib_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:gravity="center"
            android:fontFamily="@font/cafe24surround"
            android:text="3F"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lib_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:gravity="center"
            android:fontFamily="@font/cafe24surround"
            android:text="4F"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lib_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:gravity="center"
            android:fontFamily="@font/cafe24surround"
            android:text="5F"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/lib_button1"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="2층\n주제자료실" />

        <Button
            android:id="@+id/lib_button2"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="3층\n주제자료실" />

        <Button
            android:id="@+id/lib_button3"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="4층\n주제자료실" />

        <Button
            android:id="@+id/lib_button4"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="5층\n슈니나래" />

    </LinearLayout>

    <TextView
        android:id="@+id/lib_text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:fontFamily="@font/cafe24surround"
        android:text="1F"
        android:textSize="24sp"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/lib_button5"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="소셜러닝\n라운지" />

        <Button
            android:id="@+id/lib_button6"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="멀티미디어\n라운지" />

        <Button
            android:id="@+id/lib_button7"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="커뮤니티\n라운지" />

        <Button
            android:id="@+id/lib_button8"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="슈니\n마루" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp">

        <Button
            android:id="@+id/lib_button9"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/cafe24surround"
            android:background="@drawable/button_background3"
            android:text="멀티\n플렉스존" />
    </LinearLayout>

</LinearLayout>